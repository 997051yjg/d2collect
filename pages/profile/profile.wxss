/* pages/profile/profile.wxss */

/* 使用与首页相同的容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 头部区域样式与首页一致 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.logo-section {
  margin-bottom: 20rpx;
}

.logo {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.logo-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.login-icon-image {
  width: 120rpx;
  height: 120rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #b89c4f;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 未登录状态 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
  color: #999;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.login-text {
  font-size: 32rpx;
  margin-bottom: 40rpx;
  opacity: 0.9;
}

.login-btn {
  margin-bottom: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 头像区域 */
.avatar-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #d4af37;
  margin: 0 auto 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

.upload-text {
  color: white;
  font-size: 24rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 昵称区域 */
.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.nickname-label {
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.nickname-value {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
  flex: 1;
  margin: 0 20rpx;
}

.edit-btn {
  background: #d4af37;
  color: #000;
  border-radius: 20rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
}

.nickname-edit {
  padding: 30rpx;
}

.nickname-input {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid #d4af37;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #ffffff;
}

.edit-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 26rpx;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.1);
  color: #999;
  border: 2rpx solid #666;
}

.save-btn {
  background: #d4af37;
  color: #000;
}

/* 统计区域 */
.stats-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  color: #b89c4f;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 操作区域 */
.actions-section {
  text-align: center;
}

.action-btn {
  width: 100%;
  border-radius: 8rpx;
  padding: 30rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.home-btn {
  background: linear-gradient(135deg, #d4af37 0%, #b89c4f 100%);
  color: #000;
  border: none;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.home-btn:active {
  background: linear-gradient(135deg, #b89c4f 0%, #d4af37 100%);
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(212, 175, 55, 0.5);
}

.logout-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
  color: white;
  border: none;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.logout-btn:active {
  background: linear-gradient(135deg, #ff5252 0%, #ff6b6b 100%);
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 107, 0.5);
}

/* 卡片样式与首页一致 */
.card {
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.card:active {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

/* 按钮样式与首页一致 */
.btn-primary {
  background: linear-gradient(135deg, #d4af37 0%, #b89c4f 100%);
  color: #000;
  border: none;
  border-radius: 8rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.btn-primary:active {
  background: linear-gradient(135deg, #b89c4f 0%, #d4af37 100%);
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(212, 175, 55, 0.5);
}