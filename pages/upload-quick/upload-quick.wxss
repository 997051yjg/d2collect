/* pages/upload-quick/upload-quick.wxss - 奢华暗黑主题（统一风格） */

/* 页面容器 */
.container {
  background: #000000;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 登录提示 */
.login-prompt {
  padding: 60rpx 20rpx;
}

.login-prompt-card {
  padding: 80rpx 50rpx;
  text-align: center;
  background: linear-gradient(135deg, var(--surface) 0%, rgba(40, 40, 42, 0.9) 100%);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}

.login-prompt-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transition: left 0.6s ease;
}

.login-prompt-card:hover::before {
  left: 100%;
}

.login-prompt-title {
  display: block;
  font-size: 40rpx;
  color: var(--gold);
  margin-bottom: 20rpx;
  font-weight: 700;
  text-shadow: 0 0 20rpx rgba(212, 175, 55, 0.3);
}

.login-prompt-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
  margin-bottom: 50rpx;
  line-height: 1.6;
}

.login-btn {
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

/* 上传区域 */
.upload-section {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 装备信息卡片 - 使用上传页面的奢华卡片样式 */
.equipment-info-card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 32rpx;
  transition: all 0.4s var(--ease-spring);
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.8),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255,255,255,0.1);
}

.equipment-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transition: left 0.6s ease;
}

.equipment-info-card:hover::before {
  left: 100%;
}

/* 装备预览布局 */
.equipment-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.equipment-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255,255,255,0.1);
  background: rgba(0, 0, 0, 0.3);
}

.equipment-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.equipment-details {
  text-align: center;
}

.equipment-name {
  display: block;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 品质和激活状态 - 各占一行且自适应宽度 */
.equipment-rarity {
  font-size: 20rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 8rpx;
  display: block;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.equipment-rarity.unique {
  background: linear-gradient(135deg, #b89c4f, #d4af37);
  color: #000000;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
}

.equipment-rarity.suit {
  background: linear-gradient(135deg, #5d9cec, #4a7bc8);
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.status {
  display: block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  margin-top: 4rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.status.activated {
  background: linear-gradient(90deg, #d4af37, #f2d45c);
  color: #000;
  font-weight: bold;
  border: none;
  box-shadow: 0 0 15rpx rgba(212, 175, 55, 0.6);
}

.status.not-activated {
  background: rgba(128, 128, 128, 0.2);
  color: #999999;
  border: 1rpx solid rgba(128, 128, 128, 0.5);
}

/* 属性编辑区域 */
.attributes-section {
  margin-top: 20rpx;
}

.section-divider {
  height: 2rpx;
  background: rgba(212, 175, 55, 0.2);
  margin-bottom: 20rpx;
}

.attr-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attr-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(0, 0, 0, 0.3);
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.2);
}

.attr-row.variable {
  border-color: rgba(212, 175, 55, 0.3);
}

.attr-label {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--blue-magic);
  text-shadow: 0 0 10rpx rgba(72, 80, 184, 0.3);
}

.attr-range {
  font-size: 20rpx;
  color: rgba(255,255,255,0.6);
  margin-left: 8rpx;
}

.attr-input {
  width: 120rpx;
  text-align: right;
  color: #fff;
  font-size: 26rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
}

.attr-text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.6);
}

/* 图片上传区域 */
.upload-area {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 40rpx;
  transition: all 0.4s var(--ease-spring);
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.8),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255,255,255,0.1);
}

.upload-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.upload-title {
  display: block;
  font-size: 36rpx;
  font-weight: 800;
  color: var(--gold);
  margin-bottom: 12rpx;
  text-shadow: 0 0 15rpx rgba(212, 175, 55, 0.3);
}

.upload-tip {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
}

/* 图片预览 */
.image-preview {
  text-align: center;
}

.preview-image {
  width: 280rpx;
  height: 280rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(255,255,255,0.1);
  background: rgba(0, 0, 0, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
}

.preview-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.preview-actions button {
  padding: 20rpx 36rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 上传按钮 */
.upload-button {
  text-align: center;
  padding: 80rpx 40rpx;
  border: 2rpx dashed rgba(212, 175, 55, 0.3);
  border-radius: 20rpx;
  transition: all 0.4s var(--ease-spring);
  background: rgba(40, 40, 42, 0.3);
  position: relative;
  overflow: hidden;
}

.upload-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transition: left 0.6s ease;
}

.upload-button:hover::before {
  left: 100%;
}

.upload-button:active {
  border-color: var(--gold);
  background: rgba(212, 175, 55, 0.1);
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(212, 175, 55, 0.2);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  color: var(--gold);
}

.upload-text {
  display: block;
  font-size: 28rpx;
  color: var(--gold);
  margin-bottom: 24rpx;
  font-weight: 600;
}

.upload-btn {
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, var(--gold) 0%, #b89c4f 100%);
  color: #000;
  border: none;
  border-radius: 12rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  box-shadow: 0 4rpx 20rpx rgba(212, 175, 55, 0.3);
}

/* 提交按钮区域 */
.submit-section {
  text-align: center;
}

.btn-submit {
  padding: 28rpx 60rpx;
  font-size: 34rpx;
  background: linear-gradient(135deg, var(--gold) 0%, #b89c4f 100%);
  color: #000;
  border: none;
  border-radius: 16rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  box-shadow: 0 8rpx 32rpx rgba(212, 175, 55, 0.3);
  transition: all 0.3s ease;
}

.btn-submit:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(212, 175, 55, 0.5);
}

.btn-submit:disabled {
  background: #666;
  color: #999;
  box-shadow: none;
  transform: none;
}

/* 上传进度 */
.upload-progress {
  padding: 20rpx;
}

.progress-card {
  padding: 40rpx;
  text-align: center;
  background: var(--surface);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
}

.progress-title {
  display: block;
  font-size: 28rpx;
  color: var(--gold);
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
}

/* 加载状态 */
.loading {
  flex-direction: column;
  gap: 20rpx;
  padding: 60rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.1);
  border-top: 4rpx solid var(--gold);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: rgba(255,255,255,0.6);
  font-size: 28rpx;
  font-weight: 500;
}

/* 进场动画序列 */
.animate-enter {
  animation: slideUpFade 0.8s var(--ease-spring) forwards;
  opacity: 0;
  transform: translateY(40rpx);
}

@keyframes slideUpFade {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.delay-1 { animation-delay: 0.15s; }
.delay-2 { animation-delay: 0.3s; }

/* 金色文字 */
.gold-text {
  color: var(--gold);
  text-shadow: 0 0 8rpx rgba(212, 175, 55, 0.3);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--gold) 0%, #b89c4f 100%);
  color: #000;
  border: none;
  border-radius: 12rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.btn-primary:active {
  background: linear-gradient(135deg, #b89c4f 0%, var(--gold) 100%);
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(212, 175, 55, 0.5);
}

.btn-primary:disabled {
  background: #666;
  color: #999;
  box-shadow: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: var(--gold);
  border: 2rpx solid var(--gold);
  border-radius: 12rpx;
  font-weight: 600;
}

.btn-secondary:active {
  background: rgba(212, 175, 55, 0.2);
  transform: scale(0.98);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 24rpx;
  }
  
  .preview-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .attr-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .attr-input {
    width: 100%;
    text-align: left;
  }
}