/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0a0a0a 100%);
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

/* 头部区域的流光效果 */
/* 头部区域的流光效果 */
.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

.logo-section {
  margin-bottom: 20rpx;
}

.logo {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #b89c4f;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 用户区域 */
.user-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(26, 26, 26, 0.8);
  border-radius: 12rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #d4af37;
}

.user-name {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.login-section {
  text-align: center;
  margin-top: 20rpx;
}

.login-tip {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.login-btn {
  margin-bottom: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

.login-alternative {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 图鉴统计长条 */
.stats-section {
  margin-bottom: 40rpx;
}

.stats-bar {
  display: flex;
  align-items: center;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.stats-section:active .stats-bar {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.stats-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #b89c4f;
  text-shadow: 0 0 8rpx rgba(184, 156, 79, 0.6);
}

.stats-label {
  font-size: 24rpx;
  color: #b89c4f;
  font-weight: 500;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, transparent, #d4af37, transparent);
  margin: 0 20rpx;
}

/* 快速操作 */
.quick-actions-section {
  margin-bottom: 40rpx;
}

.quick-actions-bar {
  display: flex;
  align-items: center;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.quick-actions-section:active .quick-actions-bar {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.action-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  text-shadow: 0 0 15rpx rgba(212, 175, 55, 0.8);
}

.action-text {
  font-size: 28rpx;
  color: #b89c4f;
  font-weight: 700;
  text-shadow: 0 0 8rpx rgba(184, 156, 79, 0.6);
}

.action-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, transparent, #d4af37, transparent);
  margin: 0 20rpx;
}

/* 登录提示区域 */
.login-tip-section {
  margin-bottom: 40rpx;
}

.login-tip {
  padding: 32rpx;
  text-align: center;
}

.login-tip-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

/* 最近上传 */
.recent-section {
  margin-bottom: 40rpx;
}

.recent-section .recent-bar {
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.recent-section:active .recent-bar {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.recent-header {
  margin-bottom: 24rpx;
  text-align: center;
}

.recent-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #b89c4f;
  text-shadow: 0 0 8rpx rgba(184, 156, 79, 0.6);
}

.recent-list {
  white-space: nowrap;
}

.recent-items {
  display: flex;
  gap: 20rpx;
}

.recent-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 240rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  background: rgba(26, 26, 26, 0.6);
  border-radius: 12rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

.recent-item:active {
  transform: scale(0.95);
  border-color: #ffd700;
  background: rgba(42, 42, 42, 0.6);
}

.equipment-image {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 0 10rpx rgba(212, 175, 55, 0.5);
}

.equipment-name {
  display: block;
  font-size: 28rpx;
  color: #b89c4f;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
  font-weight: 600;
}

.equipment-type {
  font-size: 22rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  flex-direction: column;
  gap: 20rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 头像图片样式 */
.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: #444;
  border-radius: 50%;
}

/* 用户区域点击效果 */
.user-section:active {
  background: rgba(42, 42, 42, 0.8);
  transform: scale(0.98);
}

/* 网格样式 */
.grid {
  display: grid;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

/* 按钮样式 */
.btn-primary {
  background: #d4af37;
  color: #000;
  border: none;
  border-radius: 8rpx;
}

