/* ====================================
   Index Page Specific Styles
   ==================================== */

/* 确保内容在背景之上 */
.page-content { position: relative; z-index: 1; }
.section { margin-bottom: 60rpx; position: relative; }
.section:last-child { margin-bottom: 40rpx; }

/* ====================================
   头部增强 (Header Specific)
   ==================================== */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  position: relative;
  padding: 0 32rpx;
}

/* 首页特有的头部光环 (Portal Effect) */
.header::before {
  content: '';
  position: absolute;
  top: -120rpx; left: 50%;
  transform: translateX(-50%);
  width: 400rpx; height: 400rpx;
  /* 这是一个局部的径向光效，不同于全局背景 */
  background: radial-gradient(circle, rgba(var(--gold-rgb), 0.15) 0%, rgba(var(--gold-rgb), 0.05) 30%, transparent 70%);
  z-index: -2;
  animation: bgGlow 4s ease-in-out infinite alternate;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -40rpx; left: 50%;
  transform: translateX(-50%);
  width: 80rpx; height: 2rpx;
  background: linear-gradient(90deg, transparent, var(--gold), transparent);
  opacity: 0.5;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  position: relative;
}

.logo-container { position: relative; margin-bottom: 25rpx; }
/* Logo 背后的光晕 */
.logo-container::before {
  content: '';
  position: absolute;
  top: -10rpx; left: -10rpx; right: -10rpx; bottom: -10rpx;
  background: radial-gradient(circle, rgba(var(--gold-rgb), 0.1) 0%, transparent 70%);
  border-radius: 40rpx;
  z-index: 0;
}

.logo {
  width: 160rpx; height: 160rpx;
  border-radius: 32rpx;
  filter: drop-shadow(0 0 40rpx rgba(var(--gold-rgb), 0.3));
  position: relative;
  z-index: 1;
  transition: all 0.4s var(--ease-spring);
  animation: logoGlow 4s ease-in-out infinite alternate;
}

.titles { text-align: center; }
.main-title {
  font-size: 56rpx;
  font-weight: 800;
  color: #fff;
  display: block;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  margin-bottom: 8rpx;
  position: relative;
}
.main-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx; left: 50%;
  transform: translateX(-50%);
  width: 60rpx; height: 2rpx;
  background: linear-gradient(90deg, transparent, var(--gold), transparent);
  opacity: 0.6;
}

.sub-title {
  font-size: 28rpx;
  color: var(--gold);
  letter-spacing: 6rpx;
  text-transform: uppercase;
  opacity: 0.9;
  font-weight: 500;
  text-shadow: 0 0 20rpx rgba(var(--gold-rgb), 0.3);
  animation: subtitleGlow 3s ease-in-out infinite alternate;
}

/* ====================================
   特定组件覆盖 (Component Overrides)
   ==================================== */

/* 登录胶囊特定样式 */
.user-pill { cursor: pointer; }
.user-pill.login {
  padding: 16rpx 40rpx;
  background: var(--gold);
  color: #000;
  font-weight: 600;
}
.user-pill.login::before {
  content: '';
  position: absolute;
  top: 0; left: -100%;
  width: 100%; height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}
.user-pill.login:hover::before { left: 100%; }
.user-pill.login:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(var(--gold-rgb), 0.3);
}

.avatar {
  width: 64rpx; height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid rgba(255,255,255,0.2);
}
.username { font-size: 28rpx; font-weight: 500; }

/* 统计卡片布局微调 */
.stat-box {
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}
.stat-num {
  font-size: 44rpx; font-weight: 700; color: #fff; margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}
.stat-label {
  font-size: 24rpx; color: var(--text-secondary); font-weight: 500; letter-spacing: 1rpx;
  transition: color 0.3s ease;
}
.stat-box:hover .stat-label { color: rgba(255, 255, 255, 0.8); }

/* ====================================
   横向滚动 (Horizontal Scroll)
   ==================================== */
.recent-scroll {
  display: flex;
  width: 100%;
  height: 320rpx;
  white-space: nowrap;
  padding: 8rpx 0;
  margin: 0 -8rpx; 
}

/* 装备卡片 - 继承 .glass-card 但有特定背景 */
.recent-card {
  display: inline-flex;
  flex-direction: column;
  width: 220rpx; height: 280rpx;
  margin-right: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.08); /* 覆盖默认玻璃背景 */
  backdrop-filter: blur(30px);
}

.recent-img {
  width: 120rpx; height: 120rpx;
  margin-top: 16rpx;
  position: relative;
  z-index: 1;
  transition: all 0.4s var(--ease-spring);
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.6));
  border-radius: 16rpx;
}
/* 装备特有的悬浮旋转效果 */
.recent-card:hover .recent-img {
  transform: scale(1.15) rotate(3deg);
  filter: drop-shadow(0 12rpx 24rpx rgba(0, 0, 0, 0.8));
}

.recent-info { text-align: center; width: 100%; z-index: 1; }
.recent-name {
  font-size: 26rpx; color: #d4af37; display: block; overflow: hidden;
  text-overflow: ellipsis; white-space: nowrap; font-weight: 600;
  margin-bottom: 6rpx; letter-spacing: 0.5rpx;
}

.recent-card:hover .recent-rarity {
  background: rgba(232, 198, 112, 0.3); color: #ffd700;
}

/* ====================================
   特定动画关键帧 (Header Only)
   ==================================== */
@keyframes bgGlow {
  0% { opacity: 0.6; transform: translateX(-50%) scale(0.95); }
  100% { opacity: 1; transform: translateX(-50%) scale(1.05); }
}
@keyframes logoGlow {
  0% { filter: drop-shadow(0 0 25rpx rgba(var(--gold-rgb), 0.2)); transform: scale(1); }
  100% { filter: drop-shadow(0 0 50rpx rgba(var(--gold-rgb), 0.4)); transform: scale(1.02); }
}
@keyframes subtitleGlow {
  0% { opacity: 0.7; text-shadow: 0 0 15rpx rgba(var(--gold-rgb), 0.2); }
  100% { opacity: 1; text-shadow: 0 0 25rpx rgba(var(--gold-rgb), 0.4); }
}