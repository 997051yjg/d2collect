/* 头部设计 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  position: relative;
}

/* 头部背景光效 */
.header::before {
  content: '';
  position: absolute;
  top: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(var(--gold-rgb), 0.1) 0%, transparent 70%);
  z-index: -1;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  /* 柔和发光，而非刺眼光晕 */
  filter: drop-shadow(0 0 30rpx rgba(var(--gold-rgb), 0.2));
  position: relative;
  z-index: 1;
}

/* Logo 外发光动画 */
.logo {
  animation: logoGlow 3s ease-in-out infinite alternate;
}

@keyframes logoGlow {
  0% {
    filter: drop-shadow(0 0 20rpx rgba(var(--gold-rgb), 0.1));
  }
  100% {
    filter: drop-shadow(0 0 40rpx rgba(var(--gold-rgb), 0.3));
  }
}

.titles {
  text-align: center;
}

.main-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #fff;
  display: block;
  letter-spacing: 2rpx;
}

.sub-title {
  font-size: 24rpx;
  color: var(--gold);
  letter-spacing: 8rpx;
  text-transform: uppercase;
  opacity: 0.8;
}

/* 用户胶囊：极简设计 */
.user-pill {
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 24rpx 8rpx 8rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
  cursor: pointer;
}

.user-pill:hover {
  border-color: rgba(var(--gold-rgb), 0.3);
  background: rgba(255, 255, 255, 0.15);
}

.user-pill:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.user-pill.login {
  padding: 16rpx 40rpx;
  background: var(--gold);
  color: #000;
  font-weight: 600;
  position: relative;
  overflow: hidden;
}

.user-pill.login::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.user-pill.login:hover::before {
  left: 100%;
}

.user-pill.login:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(var(--gold-rgb), 0.3);
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid rgba(255,255,255,0.2);
}

.username {
  font-size: 28rpx;
  font-weight: 500;
}

/* 区块通用 */
.section {
  margin-bottom: 50rpx;
  position: relative;
}

/* 区块边框光效 */
.section::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border-radius: 24rpx;
  background: linear-gradient(45deg, transparent, rgba(var(--gold-rgb), 0.1), transparent);
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.section:hover::before {
  opacity: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #fff;
}

.section-more {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  position: relative;
}

/* 统计数字动画 */
.stat-num {
  transition: transform 0.3s ease, color 0.3s ease;
}

.stat-num.gold {
  animation: goldPulse 2s ease-in-out infinite;
}

@keyframes goldPulse {
  0%, 100% {
    color: var(--gold);
    text-shadow: 0 0 10rpx rgba(var(--gold-rgb), 0.3);
  }
  50% {
    color: #ffd700;
    text-shadow: 0 0 20rpx rgba(255, 215, 0, 0.5);
  }
}

.stat-box {
  background: var(--surface);
  border-radius: 20rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 统计卡片悬浮效果 */
.stat-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(var(--gold-rgb), 0.1), transparent);
  transition: left 0.5s ease;
}

.stat-box:hover::before {
  left: 100%;
}

.stat-box:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.3);
}

.stat-box:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.05);
}

.stat-num {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.stat-num.gold { color: var(--gold); }

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 横向滚动卡片 */
.recent-scroll {
  display: flex;
  width: 100%;
  height: 280rpx;
  /* 解决 flex 布局在 scroll-view 的问题 */
  white-space: nowrap;
  mask: linear-gradient(90deg, transparent 0%, #000 10%, #000 90%, transparent 100%);
}

.recent-card {
  display: inline-flex;
  flex-direction: column;
  width: 200rpx;
  height: 260rpx;
  background: var(--surface);
  border-radius: 24rpx;
  margin-right: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

/* 装备卡片悬浮效果 */
.recent-card:hover {
  transform: translateY(-8rpx) scale(1.02);
  border-color: rgba(var(--gold-rgb), 0.3);
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

  /* 装备高光背景 */
.recent-card::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0; height: 60%;
  background: radial-gradient(circle at 50% 0%, rgba(var(--gold-rgb), 0.15), transparent 70%);
  transition: opacity 0.3s ease;
}

.recent-card:hover::before {
  opacity: 0.8;
}

.recent-img {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.5));
}

.recent-card:hover .recent-img {
  transform: scale(1.1) rotate(5deg);
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.7));
}

.recent-info {
  text-align: center;
  width: 100%;
}

.recent-name {
  font-size: 24rpx;
  color: #fff;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.recent-rarity {
  font-size: 20rpx;
  color: var(--text-secondary);
}