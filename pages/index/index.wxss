/* 定义淡入上移动画 */
@keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* 基础动画类 */
  .animate-enter {
    opacity: 0; /* 初始隐藏 */
    animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }
  
  /* 依次延迟，制造层次感 */
