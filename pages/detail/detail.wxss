/* pages/detail/detail.wxss */

/* 布局容器 */
.detail-content {
  padding-bottom: 40rpx;
}

.center-screen {
  height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* =========================================
   1. 圣物展示区 (Relic Showcase)
   ========================================= */
.relic-showcase {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx;
  margin-bottom: 40rpx;
}

/* 基座光效 */
.relic-pedestal {
  position: relative;
  width: 200rpx; height: 200rpx;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 40rpx;
}

.relic-image {
  width: 160rpx; height: 160rpx;
  z-index: 2;
  filter: drop-shadow(0 10rpx 30rpx rgba(0,0,0,0.8));
  animation: floatRelic 4s ease-in-out infinite;
}

.pedestal-ring {
  position: absolute;
  width: 100%; height: 100%;
  border-radius: 50%;
  border: 2rpx dashed rgba(255,255,255,0.1);
  animation: rotateRing 20s linear infinite;
  z-index: 1;
}

/* 动态光晕 */
.glow-gold .pedestal-ring { border-color: rgba(212, 175, 55, 0.3); box-shadow: 0 0 40rpx rgba(212, 175, 55, 0.1); }
.glow-green .pedestal-ring { border-color: rgba(50, 205, 50, 0.3); box-shadow: 0 0 40rpx rgba(50, 205, 50, 0.1); }

/* 文本信息 */
.relic-info {
  text-align: center;
  display: flex; flex-direction: column; align-items: center;
}

.relic-name {
  font-size: 48rpx; font-weight: 800;
  margin-bottom: 8rpx; letter-spacing: 2rpx;
  text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.5);
}

.relic-en-name {
  font-size: 24rpx; color: var(--text-secondary);
  margin-bottom: 24rpx; font-family: serif; font-style: italic;
}

.relic-tags {
  display: flex; gap: 16rpx; justify-content: center;
}

.green-text { color: #32cd32; text-shadow: 0 0 10rpx rgba(50, 205, 50, 0.4); }
.gold-text { color: #d4af37; text-shadow: 0 0 10rpx rgba(212, 175, 55, 0.4); }

/* =========================================
   2. 属性铭文区 (Stats)
   ========================================= */
.section-card {
  margin-bottom: 32rpx;
  padding: 32rpx;
}

.stats-list {
  display: flex; flex-direction: column; gap: 16rpx;
}

/* 核心数值高亮 (如防御) */
.stat-highlight {
  text-align: center; margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}
.stat-main-value {
  font-size: 36rpx; font-weight: 700; color: #fff;
  font-family: monospace;
}

/* 属性行 (复用 Upload 页面的风格) */
.stat-row {
  display: flex; align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

/* 固定属性：暗纹 */
.stat-row.fixed {
  background: rgba(0,0,0,0.2);
  border: 1rpx solid rgba(255,255,255,0.05);
}
.stat-row.fixed .stat-text { color: var(--text-secondary); }

/* 变量属性：高亮 */
.stat-row.variable {
  background: rgba(255,255,255,0.05);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
}
.stat-row.variable .stat-text { color: var(--gold); }

/* 用户 Roll 值展示 */
.user-roll-container {
  display: flex; align-items: center; width: 100%; justify-content: space-between;
}
.user-val { color: #fff; font-weight: 700; }
.roll-badge {
  font-size: 20rpx; background: var(--gold); color: #000;
  padding: 2rpx 8rpx; border-radius: 6rpx; font-weight: 800;
}

.stat-text { font-size: 26rpx; letter-spacing: 1rpx; line-height: 1.4; }

.no-stats { text-align: center; color: var(--text-secondary); padding: 20rpx; font-style: italic; }

/* =========================================
   3. 影像画廊 (Gallery)
   ========================================= */
.gallery-scroll {
  display: flex;
  white-space: nowrap;
  height: 200rpx;
  margin: 0 -10rpx; /* 修正 padding */
}

.gallery-item {
  display: inline-block;
  width: 200rpx; height: 200rpx;
  margin-right: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255,255,255,0.1);
  position: relative;
}

.gallery-img { width: 100%; height: 100%; }

/* =========================================
   4. 收藏者印记 (Collector)
   ========================================= */
.collector-card {
  display: flex; align-items: center;
  padding: 16rpx 24rpx;
  margin-top: 40rpx;
  align-self: center; /* 居中显示 */
  width: fit-content;
  margin-left: auto; margin-right: auto;
}

.collector-avatar {
  width: 64rpx; height: 64rpx; border-radius: 50%;
  border: 2rpx solid var(--gold);
  margin-right: 20rpx;
}

.collector-meta { display: flex; flex-direction: column; margin-right: 30rpx; }
.collector-label { font-size: 20rpx; color: var(--text-secondary); }
.collector-name { font-size: 26rpx; color: #fff; font-weight: 600; }

.collector-time { font-size: 22rpx; color: rgba(255,255,255,0.4); }

/* =========================================
   底部操作栏 (Action Bar)
   ========================================= */
.action-bar {
  position: fixed;
  bottom: 40rpx; left: 32rpx; right: 32rpx;
  height: 110rpx;
  border-radius: 55rpx;
  
  background: rgba(20, 20, 20, 0.85);
  backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255,255,255,0.1);
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.5);
  
  display: flex; align-items: center; padding: 0 16rpx;
  z-index: 100;
  
  animation: slideUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.action-btn {
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  width: 100rpx; height: 100%;
  font-size: 20rpx; color: var(--text-secondary);
}
.action-icon { font-size: 36rpx; margin-bottom: 4rpx; }

/* 主按钮 (胶囊) */
.action-main-btn {
  flex: 1;
  height: 80rpx;
  margin-left: 20rpx; margin-right: 10rpx;
  border-radius: 40rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 28rpx; font-weight: 700; letter-spacing: 2rpx;
  transition: all 0.2s;
}

.upload-mode {
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.9) 0%, rgba(184, 156, 79, 1) 100%);
  color: #000;
  box-shadow: 0 0 20rpx rgba(212, 175, 55, 0.3);
}

.edit-mode {
  background: rgba(255,255,255,0.1);
  border: 1rpx solid rgba(255,255,255,0.2);
  color: #fff;
}

/* 动画定义 */
@keyframes floatRelic {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}
@keyframes rotateRing {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
@keyframes slideUp {
  from { transform: translateY(100%); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

