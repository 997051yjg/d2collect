.detail-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  color: #ffffff;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #d4af37;
  border-top: 4rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #cccccc;
  font-size: 28rpx;
}

/* 顶部信息布局 - 图片在左上角，文字在左下角，右侧展示属性 */
.equipment-header-layout {
  display: flex;
  padding: 40rpx 30rpx;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

/* 头部区域的流光效果 */
.equipment-header-layout::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  animation: shimmer 3s infinite;
}

.equipment-header-layout:active {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

