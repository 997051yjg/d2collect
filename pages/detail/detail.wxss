/* pages/detail/detail.wxss */

.detail-container {
  min-height: 100vh;
  /* 使用深色径向渐变模拟光源 */
  background: radial-gradient(circle at 50% 20%, var(--surface-light) 0%, #000000 80%);
  color: #ffffff;
  padding: 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--gold);
  border-top: 4rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 2. 头部卡片：统一使用和其他卡片相同的样式 */
.equipment-header-layout {
  display: flex;
  padding: 40rpx 30rpx;
  background: rgba(0, 0, 0, 0.95);
  border: 2rpx solid var(--gold);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  align-items: flex-start;
}

/* 取消头部区域的流光效果 */

/* 第一张卡片的active状态样式 */
.equipment-header-layout:active {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

/* 左侧区域：图片和基本信息 */
.equipment-left-section {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 40rpx;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10rpx;
  position: relative;
}

/* 左侧区域右侧的金线分隔 */
.equipment-left-section::after {
  content: '';
  position: absolute;
  top: 0;
  right: -20rpx;
  width: 2rpx;
  height: 100%;
  background: linear-gradient(to bottom, transparent, var(--gold), transparent);
}

/* 装备图片（居中） */
.equipment-image-top-left {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: auto;
  margin-right: auto;
}

.main-equipment-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 12rpx;
  border: 1rpx solid var(--gold);
  box-shadow: 0 2rpx 8rpx rgba(var(--gold-rgb), 0.2);
}

/* 基本信息（左下角） */
.equipment-info-bottom-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

/* 右侧区域：装备属性 */
.equipment-attributes-right {
  flex: 1;
  min-width: 200rpx;
  padding-left: 30rpx;
}

.equipment-attributes-right .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--gold);
  margin-bottom: 25rpx;
  border-bottom: 1rpx solid rgba(var(--gold-rgb), 0.3);
  padding-bottom: 8rpx;
}

.equipment-attributes-right .attributes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 4. 属性列表优化：取消边框 */
.equipment-attributes-right .attribute-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 12rpx;
}

.equipment-attributes-right .attribute-item:last-child {
  margin-bottom: 0;
}

.equipment-attributes-right .label {
  color: var(--text-secondary);
  font-size: 28rpx;
  margin-right: 12rpx;
  white-space: nowrap;
}

/* 5. 属性值优化 */
.equipment-attributes-right .value {
  color: var(--gold); /* 使用稍微柔和的暗金色 */
  font-family: monospace; /* 等宽字体更有数据感 */
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1.4;
  text-align: left;
