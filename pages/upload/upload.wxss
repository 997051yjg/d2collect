/* pages/upload/upload.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 登录提示 */
.login-prompt {
  padding: 40rpx 20rpx;
}

.login-prompt-card {
  padding: 60rpx 40rpx;
  text-align: center;
}

.login-prompt-title {
  display: block;
  font-size: 36rpx;
  color: #d4af37;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.login-prompt-desc {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.login-btn {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 上传区域 */
.upload-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.upload-area {
  padding: 40rpx;
}

.upload-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.upload-title {
  display: block;
  font-size: 36rpx;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 图片预览 */
.image-preview {
  text-align: center;
}

.preview-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #d4af37;
  background: rgba(184, 156, 79, 0.1);
  object-fit: contain;
  box-sizing: border-box;
  padding: 12rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.preview-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.preview-actions button {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

/* 上传按钮 */
.upload-button {
  text-align: center;
  padding: 60rpx 40rpx;
  border: 2rpx dashed #b89c4f;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  background: rgba(184, 156, 79, 0.05);
}

.upload-button:active {
  border-color: #d4af37;
  background: rgba(212, 175, 55, 0.1);
  transform: scale(0.98);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #b89c4f;
}

.upload-icon-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 28rpx;
  color: #b89c4f;
  margin-bottom: 20rpx;
}

.upload-btn {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #d4af37 0%, #b89c4f 100%);
  color: #000;
  border: none;
  border-radius: 8rpx;
  font-weight: 600;
}

/* 表单区域 */
.form-section {
  padding: 40rpx;
}

.form-header {
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #d4af37;
  text-shadow: 0 0 8rpx rgba(212, 175, 55, 0.3);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #b89c4f;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  min-height: 80rpx;
  height: auto;
}

.input, .textarea, .picker {
  width: 100%;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  color: #ffffff;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.input:focus, .textarea:focus {
  border-color: #b89c4f;
  box-shadow: 
    0 0 30rpx rgba(184, 156, 79, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.textarea {
  height: 120rpx;
  resize: none;
}

.picker-value {
  color: #ffffff;
}

.picker-value:empty::before {
  content: '请选择装备类型';
  color: #b89c4f;
  opacity: 0.7;
}

/* 表单操作 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.form-actions button {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.form-actions button:active {
  transform: scale(0.98);
}

/* 上传进度 */
.upload-progress {
  padding: 20rpx;
}

.progress-card {
  padding: 40rpx;
  text-align: center;
}

.progress-title {
  display: block;
  font-size: 28rpx;
  color: #d4af37;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  flex-direction: column;
  gap: 20rpx;
  padding: 60rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 搜索相关样式 */
.search-container {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  width: 100%;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.card:active {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #d4af37 0%, #b89c4f 100%);
  color: #000;
  border: none;
  border-radius: 12rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.btn-primary:active {
  background: linear-gradient(135deg, #b89c4f 0%, #d4af37 100%);
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(212, 175, 55, 0.5);
}

.btn-primary:disabled {
  background: #666;
  color: #999;
  box-shadow: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #b89c4f;
  border: 2rpx solid #b89c4f;
  border-radius: 12rpx;
  font-weight: 600;
}

.btn-secondary:active {
  background: rgba(184, 156, 79, 0.2);
  transform: scale(0.98);
}

/* 金色文字 */
.gold-text {
  color: #d4af37;
  text-shadow: 0 0 8rpx rgba(212, 175, 55, 0.3);
}

/* 独立装备模板卡片区域 */
.templates-section {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.templates-header {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(184, 156, 79, 0.1);
  border: 2rpx solid #d4af37;
  border-radius: 12rpx;
}

.templates-title {
  display: block;
  font-size: 32rpx;
  color: #d4af37;
  font-weight: 600;
  margin-bottom: 8rpx;
  text-shadow: 0 0 8rpx rgba(212, 175, 55, 0.4);
}

.templates-tip {
  font-size: 24rpx;
  color: #b89c4f;
  opacity: 0.8;
}

.templates-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.template-card {
  background: rgba(10, 10, 10, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #d4af37;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.template-card:active {
  transform: scale(0.98);
  border-color: #ffd700;
  box-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.template-card.selected {
  border-color: #b89c4f;
  box-shadow: 0 0 20rpx rgba(184, 156, 79, 0.3);
}

.template-image {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(184, 156, 79, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(184, 156, 79, 0.3);
}

.image-placeholder {
  font-size: 48rpx;
  z-index: 2;
  position: relative;
  color: #b89c4f;
}

.template-card.selected .template-image {
  background: rgba(184, 156, 79, 0.2);
  border-color: #b89c4f;
}

.template-info {
  text-align: center;
  margin-bottom: 16rpx;
}

.template-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
}

.template-card.selected .template-name {
  color: #b89c4f;
  text-shadow: 0 0 10rpx rgba(184, 156, 79, 0.6);
}

.template-type {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.template-rarity {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-top: 8rpx;
}

.template-rarity.suit {
  background: rgba(0, 255, 0, 0.2);
  color: #00ff00;
}

.template-rarity.unique {
  background: rgba(184, 156, 79, 0.3);
  color: #b89c4f;
}

.activation-status {
  text-align: center;
}

.status-text {
  font-size: 22rpx;
  color: #b89c4f;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(184, 156, 79, 0.2);
  border: 1rpx solid #b89c4f;
}

.status-text.default {
  color: #999;
  background: rgba(153, 153, 153, 0.2);
  border-color: #666;
}

/* 空状态 */
.empty-templates {
  text-align: center;
  padding: 60rpx 40rpx;
  background: rgba(10, 10, 10, 0.8);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-subtext {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 属性编辑区域 */
.attributes-section {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(212, 175, 55, 0.2);
}

.attr-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attr-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(0, 0, 0, 0.3);
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

.attr-row.variable {
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

.attr-label {
  font-size: 28rpx;
  font-weight: 500;
}

.attr-range {
  font-size: 22rpx;
  color: #666;
  margin-left: 8rpx;
}

.attr-input {
  width: 120rpx;
  text-align: right;
  color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #666;
}

.input-placeholder {
  color: #444;
}

.attr-text {
  font-size: 28rpx;
}