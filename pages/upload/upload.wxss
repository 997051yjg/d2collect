/* pages/upload/upload.wxss - 奢华暗黑主题 */

/* 页面容器 */
.container {
  background: #000000;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 搜索栏 - 粘性设计 */
.search-wrapper {
  position: sticky;
  top: 0;
  z-index: 1000;
  margin-bottom: 40rpx;
  backdrop-filter: blur(20px);
  padding: 16rpx 0;
  background: rgba(0, 0, 0, 0.8);
}

.search-bar {
  height: 96rpx;
  background: var(--surface);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
  transition: all 0.4s var(--ease-spring);
  position: relative;
}

/* 搜索栏聚焦效果 */
.search-bar::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border-radius: 26rpx;
  background: linear-gradient(45deg, transparent, rgba(212, 175, 55, 0.3), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.search-bar.focused {
  border-color: var(--gold);
  box-shadow: 
    0 8rpx 32rpx rgba(212, 175, 55, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  transform: translateY(-2rpx);
}

.search-bar.focused::before {
  opacity: 1;
}

.search-input {
  flex: 1;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

.ph { 
  color: rgba(255,255,255,0.4); 
  font-weight: 400;
}

/* 搜索栏内部元素 */
.search-bar {
  position: relative;
}

/* 三角形切换按钮 */
.toggle-btn {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.1);
  transition: all 0.3s ease;
  opacity: 0.5;
  z-index: 10;
}

.toggle-btn.active {
  opacity: 1;
  background: rgba(212, 175, 55, 0.2);
}

.toggle-btn:active {
  background: rgba(255,255,255,0.2);
  transform: scale(0.9);
}

.triangle {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  transition: all 0.3s ease;
}

.triangle.down {
  border-top: 8rpx solid rgba(255,255,255,0.7);
}

.triangle.up {
  border-bottom: 8rpx solid var(--gold);
  transform: rotate(180deg);
}

/* 搜索状态指示器 */
.search-status {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(40, 40, 42, 0.8);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
}

.search-loading, .search-error {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--gold);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(0.8); }
}

.status-text {
  color: rgba(255,255,255,0.7);
  font-size: 26rpx;
}

/* 搜索结果卡片 */
.result-card {
  display: none;
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  max-height: 600rpx;
  background: rgba(40, 40, 42, 0.98);
  border-radius: 24rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.8),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  z-index: 10;
  backdrop-filter: blur(30px);
  border: 1rpx solid rgba(255,255,255,0.1);
  transform: translateY(-20rpx) scale(0.95);
  opacity: 0;
  transition: all 0.4s var(--ease-spring);
}

.result-card.show,
[class*="result-card show"],
[class*="show result-card"] {
  display: block !important;
  transform: translateY(0) scale(1) !important;
  opacity: 1 !important;
  pointer-events: auto !important;
}



/* 卡片内容区域 */
.card-content {
  max-height: 500rpx;
}

/* 装备网格布局 */
.equipment-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 24rpx;
  padding: 32rpx;
}

/* 装备小卡片 */
.equipment-card {
  background: var(--surface);
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.4s var(--ease-spring);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

/* 竖向布局 */
.card-layout {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}



.equipment-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transition: left 0.6s ease;
}

.equipment-card:hover::before {
  left: 100%;
}

.equipment-card:hover {
  border-color: rgba(212, 175, 55, 0.3);
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(212, 175, 55, 0.2);
}

.equipment-card.active {
  border-color: var(--blue-magic);
  background: rgba(72, 80, 184, 0.1);
}

.equipment-card.selected {
  border-color: var(--gold);
  background: rgba(212, 175, 55, 0.1);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(212, 175, 55, 0.3);
}

/* 装备图片区域 */
.card-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255,255,255,0.1);
  background: rgba(0, 0, 0, 0.3);
}

.equipment-img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 装备信息 */
.card-info {
  text-align: center;
}

.equipment-name {
  display: block;
  font-size: 26rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.equipment-rarity {
  font-size: 20rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 8rpx;
  display: block;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.equipment-rarity.unique {
  background: linear-gradient(135deg, #b89c4f, #d4af37);
  color: #000000;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
}

.equipment-rarity.suit {
  background: linear-gradient(135deg, #5d9cec, #4a7bc8);
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.status {
  display: block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  margin-top: 4rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.status.activated {
  background: linear-gradient(90deg, #d4af37, #f2d45c);
  color: #000;
  font-weight: bold;
  border: none;
  box-shadow: 0 0 15rpx rgba(212, 175, 55, 0.6);
}

.status.not-activated {
  background: rgba(128, 128, 128, 0.2);
  color: #999999;
  border: 1rpx solid rgba(128, 128, 128, 0.5);
}

/* 选中指示器 */
.selection-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.equipment-card.selected .selection-indicator {
  opacity: 1;
  animation: pulse 2s infinite;
}



/* 搜索结果项 */
.res-item {
  padding: 28rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.05);
  transition: all 0.3s ease;
}

.res-item:last-child {
  border-bottom: none;
}

.res-item.active {
  background: rgba(212, 175, 55, 0.1);
}

.res-item:active { 
  background: rgba(212, 175, 55, 0.15);
  transform: scale(0.98);
}

/* 搜索结果内容 */
.res-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  background: rgba(212, 175, 55, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.res-content {
  flex: 1;
}

.res-name { 
  font-size: 30rpx; 
  color: #fff; 
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
}

.res-sub { 
  font-size: 24rpx; 
  color: rgba(255,255,255,0.6); 
  font-weight: 400;
}

.res-action {
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.res-item:hover .res-action {
  opacity: 1;
}

/* 空状态提示 */
.empty-state {
  padding: 80rpx 40rpx;
  text-align: center;
  background: rgba(40, 40, 42, 0.8);
  border-radius: 24rpx;
  margin-top: 20rpx;
  backdrop-filter: blur(10px);
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
  margin: 20rpx 0 8rpx;
  font-weight: 500;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255,255,255,0.5);
}

/* 搜索历史 */
.search-history {
  background: rgba(40, 40, 42, 0.8);
  border-radius: 24rpx;
  margin-top: 20rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255,255,255,0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.history-title {
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
  font-weight: 500;
}

.history-clear {
  font-size: 24rpx;
  color: var(--gold);
  font-weight: 500;
}

.history-list {
  padding: 16rpx 0;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 30rpx;
  transition: all 0.3s ease;
}

.history-item:active {
  background: rgba(255,255,255,0.05);
}

.history-text {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  font-weight: 400;
}

/* 登录提示卡片 */
.login-prompt {
  padding: 60rpx 20rpx;
}

.login-prompt-card {
  padding: 80rpx 50rpx;
  text-align: center;
  background: linear-gradient(135deg, var(--surface) 0%, rgba(40, 40, 42, 0.9) 100%);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
  position: relative;
}

.login-prompt-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transition: left 0.6s ease;
}

.login-prompt-card:hover::before {
  left: 100%;
}

.login-prompt-title {
  display: block;
  font-size: 40rpx;
  color: var(--gold);
  margin-bottom: 20rpx;
  font-weight: 700;
  text-shadow: 0 0 20rpx rgba(212, 175, 55, 0.3);
}

.login-prompt-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
  margin-bottom: 50rpx;
  line-height: 1.6;
}

.login-btn {
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

/* 属性鉴定卡片 */
.card-header {
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
  padding-bottom: 24rpx;
  position: relative;
}

.card-header::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 0;
  width: 100rpx;
  height: 2rpx;
  background: var(--gold);
}

.card-title { 
  font-size: 36rpx; 
  font-weight: 800; 
  color: var(--gold); 
  text-shadow: 0 0 15rpx rgba(212, 175, 55, 0.3);
}

.card-sub { 
  font-size: 26rpx; 
  color: rgba(255,255,255,0.6); 
  margin-top: 12rpx; 
  display: block; 
  font-weight: 400;
}

/* 属性列表 */
.attr-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.attr-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx dashed rgba(255,255,255,0.1);
  transition: all 0.3s ease;
}

.attr-row:hover {
  background: rgba(255,255,255,0.02);
  border-radius: 12rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.attr-row:last-child { 
  border: none; 
}

.attr-label {
  color: var(--blue-magic);
  font-size: 30rpx;
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(72, 80, 184, 0.3);
}

.attr-input {
  text-align: right;
  color: #fff;
  font-size: 32rpx;
  width: 200rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
  transition: all 0.3s ease;
}

.attr-input:focus {
  border-color: var(--blue-magic);
  background: rgba(72, 80, 184, 0.1);
}

.ph-small { 
  color: rgba(255,255,255,0.3); 
  font-size: 26rpx; 
}

.attr-fixed { 
  color: rgba(255,255,255,0.6); 
  font-size: 30rpx; 
  font-weight: 500;
}

/* 底部上传区域 */
.footer-section {
  display: flex;
  gap: 40rpx;
  align-items: stretch;
  margin-top: 60rpx;
}

.upload-slot {
  width: 200rpx;
  height: 200rpx;
  background: var(--surface);
  border-radius: 24rpx;
  border: 2rpx dashed rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.4s var(--ease-spring);
  position: relative;
  overflow: hidden;
}

.upload-slot::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transition: left 0.6s ease;
}

.upload-slot:hover::before {
  left: 100%;
}

.upload-slot:hover {
  border-color: var(--gold);
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(212, 175, 55, 0.2);
}

.slot-placeholder { 
  text-align: center; 
  z-index: 1;
}

.slot-icon { 
  font-size: 60rpx; 
  color: var(--gold); 
  display: block; 
  margin-bottom: 12rpx;
  font-weight: 300;
}

.slot-text { 
  font-size: 24rpx; 
  color: rgba(255,255,255,0.6); 
  font-weight: 400;
}

.slot-img { 
  width: 100%; 
  height: 100%; 
  border-radius: 20rpx; 
  object-fit: cover;
}

.submit-btn { 
  flex: 1; 
  height: auto;
  font-size: 34rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

/* 加载状态 */
.loading {
  flex-direction: column;
  gap: 24rpx;
  padding: 80rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.1);
  border-top: 4rpx solid var(--gold);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: rgba(255,255,255,0.6);
  font-size: 28rpx;
  font-weight: 500;
}

/* 进场动画序列 */
.animate-enter {
  animation: slideUpFade 0.8s var(--ease-spring) forwards;
  opacity: 0;
  transform: translateY(40rpx);
}

@keyframes slideUpFade {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.delay-1 { animation-delay: 0.15s; }
.delay-2 { animation-delay: 0.3s; }

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 24rpx;
  }
  
  .footer-section {
    flex-direction: column;
    gap: 24rpx;
  }
  
  .upload-slot {
    width: 100%;
    height: 200rpx;
  }
}