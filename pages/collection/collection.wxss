/* ====================================
   Page Layout & Header
   ==================================== */
   .page-content { position: relative; z-index: 1; }

   .header-compact {
     display: flex;
     justify-content: space-between;
     align-items: center;
     margin-bottom: 40rpx;
     padding: 0 16rpx;
   }
   
   .header-info {
     display: flex;
     flex-direction: column;
   }
   
   .page-title {
     font-size: 48rpx;
     font-weight: 800;
     color: #fff;
     line-height: 1;
     margin-bottom: 8rpx;
   }
   
   .page-subtitle {
     font-size: 24rpx;
     color: var(--gold);
     text-transform: uppercase;
     letter-spacing: 4rpx;
     font-weight: 500;
     opacity: 0.8;
   }
   
   /* 进度卡片 - Dashboard 风格 */
   .progress-card {
     width: 320rpx;
     padding: 20rpx;
     /* 覆盖默认 glass-card 的一些属性以适应头部 */
     margin-bottom: 0; 
     display: flex;
     flex-direction: column;
     justify-content: center;
   }
   
   .progress-info {
     display: flex;
     justify-content: space-between;
     align-items: flex-end;
     margin-bottom: 12rpx;
   }
   
   .progress-label { font-size: 22rpx; color: var(--text-secondary); }
   .progress-val { font-size: 28rpx; font-weight: 700; }
   .dim { color: rgba(255,255,255,0.3); font-size: 22rpx; font-weight: 400; }
   
   /* ====================================
      Filter Zone (交互核心区)
      ==================================== */
   .filter-zone { margin-bottom: 32rpx; }
   
   /* 类型横向滚动条 */
   .type-scroll {
     display: flex;
     white-space: nowrap;
     margin: 24rpx -32rpx; /* 负边距抵消 container padding */
     padding: 0 32rpx;
     height: 60rpx;
     box-sizing: content-box; /* 确保 padding 不影响高度计算 */
   }
   
   .type-item {
     display: inline-flex;
     flex-direction: column;
     align-items: center;
     margin-right: 48rpx;
     color: var(--text-secondary);
     font-size: 28rpx;
     font-weight: 500;
     transition: all 0.3s ease;
     position: relative;
     height: 100%;
   }
   
   .type-item.active {
     color: #fff;
     font-weight: 600;
     text-shadow: 0 0 20rpx rgba(var(--gold-rgb), 0.4);
   }
   
   .active-indicator {
     position: absolute;
     bottom: 0;
     width: 32rpx;
     height: 4rpx;
     background: var(--gold);
     border-radius: 4rpx;
     box-shadow: 0 0 10rpx rgba(var(--gold-rgb), 0.6);
     animation: tabIndicator 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
   }
   
   /* 筛选胶囊群 */
   .filter-chips {
     display: flex;
     flex-wrap: wrap;
     gap: 16rpx;
   }
   
   .chip {
     font-size: 24rpx;
     color: var(--text-secondary);
     transition: all 0.2s ease;
     border-color: transparent;
     text-align: center;
     padding: 8rpx 16rpx;
   }
   
   /* 选中状态变体 */
   .chip.active-gold {
     background: rgba(212, 175, 55, 0.2);
     border-color: rgba(212, 175, 55, 0.5);
     color: #ffd700;
   }
   .chip.active-green {
     background: rgba(50, 205, 50, 0.15);
     border-color: rgba(50, 205, 50, 0.4);
     color: #32cd32;
   }
   .chip.active-orange {
     background: rgba(255, 165, 0, 0.15);
     border-color: rgba(255, 165, 0, 0.4);
     color: #ffa500;
   }
   .chip.active-dim {
     background: rgba(255, 255, 255, 0.15);
     border-color: rgba(255, 255, 255, 0.3);
     color: #fff;
   }
   
   /* ====================================
      Grid & Items (装备网格)
      ==================================== */
   .grid-item {
     display: flex;
     flex-direction: column;
     align-items: center;
   }
   
   .item-card {
     width: 100%;
     aspect-ratio: 1; /* 保持正方形 */
     position: relative;
     margin-bottom: 12rpx;
     display: flex;
     align-items: center;
     justify-content: center;
     transition: border-color 0.3s ease, transform 0.3s var(--ease-spring);
   }
   
   .item-card.owned {
     border-color: rgba(var(--gold-rgb), 0.5);
     background: rgba(212, 175, 55, 0.05);
     box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2), inset 0 0 20rpx rgba(var(--gold-rgb), 0.05);
   }
   
   /* 点击反馈 */
   .grid-item:active .item-card { transform: scale(0.95); }
   
   .item-img {
     width: 70%;
     height: 70%;
     filter: grayscale(100%) opacity(0.5);
     transition: all 0.4s ease;
   }
   
   .item-card.owned .item-img {
     filter: drop-shadow(0 8rpx 16rpx rgba(0,0,0,0.6));
   }
   
   /* 品质小圆点 (替代大标签，更精致) */
   .rarity-dot {
     position: absolute;
     top: 12rpx; right: 12rpx;
     width: 12rpx; height: 12rpx;
     border-radius: 50%;
     box-shadow: 0 0 10rpx currentColor;
   }
   .rarity-dot.unique { background: #ffd700; color: #ffd700; }
   .rarity-dot.suit { background: #9370db; color: #9370db; }
   .rarity-dot.runeword { background: #ffa500; color: #ffa500; } /* 修正符文颜色为橙色系 */
   
   /* 状态角标 */
   .status-badge {
     position: absolute;
     bottom: 8rpx; right: 8rpx;
     width: 32rpx; height: 32rpx;
     background: var(--gold);
     border-radius: 50%;
     display: flex;
     align-items: center;
     justify-content: center;
     box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.5);
   }
   
   .item-name {
     font-size: 24rpx;
     color: var(--text-secondary);
     text-align: center;
     width: 100%;
     overflow: hidden;
     text-overflow: ellipsis;
     white-space: nowrap;
     padding: 0 4rpx;
   }
   
   /* Helper styles */
   .loading-more { padding: 40rpx 0; display: flex; justify-content: center; }
   .loading-spinner.small { width: 40rpx; height: 40rpx; }