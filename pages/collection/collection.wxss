  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.equipment-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 2;
  position: relative;
}

/* 光晕效果 */
.glow-effect {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 140rpx;
  height: 140rpx;
  background: radial-gradient(circle, rgba(184, 156, 79, 0.4) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  0% {
    opacity: 0.3;
    transform: translate(-50%, -50%) scale(0.9);
  }
  100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.equipment-info {
  text-align: center;
  margin-bottom: 16rpx;
}

.equipment-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
}

/* 未激活装备名称 */
.equipment-name {
  color: rgba(255, 255, 255, 0.2);
}

/* 已激活装备名称 - 金色光晕效果 */
.equipment-card.activated .equipment-name {
  color: #b89c4f;
  text-shadow: 0 0 10rpx rgba(184, 156, 79, 0.6);
  animation: goldGlow 2s ease-in-out infinite alternate;
}

@keyframes goldGlow {
  0% {
    text-shadow: 0 0 5rpx rgba(184, 156, 79, 0.4);
  }
  100% {
    text-shadow: 0 0 15rpx rgba(184, 156, 79, 0.8);
  }
}

.equipment-type {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.equipment-rarity {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-top: 8rpx;
}

.equipment-rarity.suit {
  background: rgba(0, 255, 0, 0.2);
  color: #00ff00;
}

.equipment-rarity.unique {
  background: rgba(184, 156, 79, 0.3);
  color: #b89c4f;
}

.activation-status {
  text-align: center;
}

.status-text {
  font-size: 22rpx;
  color: #b89c4f;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(184, 156, 79, 0.2);
  border: 1rpx solid #b89c4f;
}

.status-text.locked {
  color: #999;
  background: rgba(153, 153, 153, 0.2);
  border-color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-subtext {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #333;
  border-top: 4rpx solid #b89c4f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* --- ✨ 新增动画效果 ✨ --- */

/* 定义淡入上移动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 应用到每一个装备格子上 */
.collection-item {
  /* 默认隐藏 */
  opacity: 0; 
  /* 执行动画：时长0.5秒，贝塞尔曲线让运动更自然 */
  animation: fadeInUp 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

/* --- ⚡️ 核心：利用 CSS 计数器或 nth-child 制造延迟感 --- */
/* 这里我们手动写前 20 个元素的延迟，让它们看起来像波浪一样出来 */
.collection-item:nth-child(1) { animation-delay: 0.05s; }
.collection-item:nth-child(2) { animation-delay: 0.1s; }
.collection-item:nth-child(3) { animation-delay: 0.15s; }
.collection-item:nth-child(4) { animation-delay: 0.2s; }
.collection-item:nth-child(5) { animation-delay: 0.25s; }
.collection-item:nth-child(6) { animation-delay: 0.3s; }
.collection-item:nth-child(7) { animation-delay: 0.35s; }
.collection-item:nth-child(8) { animation-delay: 0.4s; }
/* ... 如果需要更多，可以继续写，或者让后续的一起出来 */
.collection-item:nth-child(n+9) { animation-delay: 0.45s; }

