/* pages/collection/collection.wxss */

.container {
  padding-top: 0; /* 让 sticky header 顶头 */
}

.sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(20px); /* 磨砂玻璃 */
  padding: 20rpx 32rpx;
  margin: 0 -32rpx 30rpx -32rpx; /* 抵消 container padding */
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-box {
  flex: 1;
  height: 72rpx;
  background: var(--surface-light);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 12rpx;
  color: #fff;
  font-size: 28rpx;
}

.placeholder { color: var(--text-secondary); }

.filter-btn {
  color: var(--gold);
  font-size: 28rpx;
  font-weight: 500;
}

/* 筛选标签组 */
.filter-panel {
  margin-bottom: 30rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 10rpx 24rpx;
  background: var(--surface);
  color: var(--text-secondary);
  border-radius: 30rpx;
  font-size: 24rpx;
  transition: all 0.3s;
}

.tag.active {
  background: var(--gold);
  color: #000;
  font-weight: 600;
}

/* 网格 */
.collection-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 4列，像iOS相册 */
  gap: 20rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-card {
  width: 100%;
  aspect-ratio: 1;
  background: var(--surface);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 12rpx;
  overflow: hidden;
}

.item-card.owned {
  background: linear-gradient(135deg, #2C2C2E 0%, #1C1C1E 100%);
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

/* 未拥有的装备半透明 */
.item-card:not(.owned) .item-img {
  opacity: 0.3;
  filter: grayscale(100%);
}

.item-img {
  width: 80%;
  height: 80%;
}

.item-status {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
  background: var(--gold);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-name {
  font-size: 20rpx;
  color: #999;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}