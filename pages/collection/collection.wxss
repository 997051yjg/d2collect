.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 筛选栏 */
.filter-section {
  margin-bottom: 30rpx;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  padding: 0 24rpx;
  color: #ffffff;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  box-sizing: border-box;
}

.search-input:focus {
  border-color: #b89c4f;
  box-shadow: 
    0 0 30rpx rgba(184, 156, 79, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.search-input::placeholder {
  color: #b89c4f;
  opacity: 0.7;
}

/* 筛选下拉卡片 */
.filter-dropdown {
  margin-bottom: 20rpx;
}

.filter-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(10, 10, 10, 0.95);
  border: 2rpx solid #d4af37;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.filter-toggle:active {
  background: rgba(184, 156, 79, 0.2);
  transform: scale(0.98);
}

.filter-toggle-text {
  font-size: 28rpx;
  color: #b89c4f;
  font-weight: 600;
}

.filter-toggle-icon {
  font-size: 24rpx;
  color: #b89c4f;
  transition: transform 0.3s ease;
}

.filter-toggle-icon.active {
  transform: rotate(180deg);
  color: #d4af37;
}

.type-filters,
.advanced-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 类型筛选按钮 */
.type-filter {
  padding: 12rpx 20rpx;
  background: rgba(10, 10, 10, 0.8);
  border: 2rpx solid #d4af37;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #b89c4f;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
}

.type-filter::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.2), transparent);
  transition: left 0.5s ease;
}

.type-filter:active::before {
  left: 100%;
}

.type-filter.active {
  background: rgba(184, 156, 79, 0.3);
  color: #d4af37;
  border-color: #d4af37;
  box-shadow: 0 0 15rpx rgba(212, 175, 55, 0.4);
}

