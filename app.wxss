/* app.wxss */

page {
  /* iOS 深色模式基调 */
  background-color: #000000;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  
  /* 全局变量 */
  --gold: #D4AF37;       /* 经典暗金 */
  --gold-dim: #8c7220;   /* 暗淡金（用于辅助） */
  --gold-rgb: 212, 175, 55; /* 金色RGB值，用于rgba */
  --surface: #1C1C1E;    /* iOS 标准层级背景色 */
  --surface-light: #2C2C2E;
  --text-secondary: #8E8E93;
  --border-radius: 24rpx; /* 现代大圆角 */
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1); /* 苹果风弹性动画曲线 */
}

.container {
  padding: 32rpx;
  padding-bottom: 120rpx; /* 底部留白，防遮挡 */
  box-sizing: border-box;
  min-height: 100vh;
}

/* Apple 风格卡片：无边框，重阴影，柔和圆角 */
.ios-card {
  background-color: var(--surface);
  border-radius: var(--border-radius);
  padding: 32rpx;
  margin-bottom: 32rpx;
  /* 极细的顶部高光，增加立体感 */
  box-shadow: 
    0 1px 0 rgba(255, 255, 255, 0.05) inset,
    0 10rpx 40rpx rgba(0, 0, 0, 0.5);
}

/* 金色标题 */
.gold-title {
  color: var(--gold);
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

/* 交互按钮：弹性缩放 */
.btn-primary {
  background: linear-gradient(135deg, #D4AF37 0%, #B48F25 100%);
  color: #000;
  font-weight: 600;
  font-size: 30rpx;
  height: 88rpx;
  border-radius: 44rpx; /* 胶囊按钮 */
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.3);
  transition: transform 0.4s var(--ease-spring), opacity 0.2s;
}

.btn-primary:active {
  transform: scale(0.94); /* 点击时的回弹质感 */
  opacity: 0.9;
}

/* 进场动画：丝滑上浮 */
.animate-enter {
  animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  opacity: 0;
  transform: translateY(20px);
}

@keyframes slideUp {
  to { opacity: 1; transform: translateY(0); }
}

.delay-1 { animation-delay: 0.1s; }
.delay-2 { animation-delay: 0.2s; }
.delay-3 { animation-delay: 0.3s; }

/* 金色文字 */
.gold-text {
  color: var(--gold);
}

/* 底部导航栏样式增强 - 苹果风格 */
/* 导航栏背景光效 */
.tab-bar {
  position: relative;
}

.tab-bar::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(var(--gold-rgb), 0.3), transparent);
}

/* 导航项选中状态增强 */
.tab-bar-item {
  position: relative;
  transition: all 0.3s var(--ease-spring);
}

.tab-bar-item.active::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 4rpx;
  background: var(--gold);
  border-radius: 2rpx;
  animation: tabIndicator 0.3s ease-out;
}

@keyframes tabIndicator {
  0% {
    width: 0;
    opacity: 0;
  }
  100% {
    width: 24rpx;
    opacity: 1;
  }
}

/* 导航图标动画 */
.tab-bar-icon {
  transition: transform 0.3s var(--ease-spring);
}

.tab-bar-item.active .tab-bar-icon {
  transform: scale(1.1);
  filter: drop-shadow(0 0 10rpx rgba(var(--gold-rgb), 0.4));
}

/* 导航文字动画 */
.tab-bar-text {
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-bar-text {
  font-weight: 600;
  text-shadow: 0 0 15rpx rgba(var(--gold-rgb), 0.3);
}

/* 页面切换动画 */
.page-transition {
  animation: pageSlide 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes pageSlide {
  0% {
    opacity: 0;
    transform: translateX(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 页面加载动画 */
.page-loading {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

/* 滚动加载动画 */
.scroll-load {
  animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

