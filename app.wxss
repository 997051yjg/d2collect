/* app.wxss */

page {
  background-color: #000000; /* 真黑背景，省电且深邃 */
  color: #E5E5E5; /* 次白文字，阅读舒适 */
  font-family: -apple-system, "SF Pro Text", "Helvetica Neue", sans-serif;
  
  /* --- 调色板 --- */
  --gold: #D4AF37;       /* 暗金装备色 */
  --gold-dim: #8C7226;   /* 暗淡金（边框/次要） */
  --blue-magic: #4850B8; /* 魔法词条蓝 */
  --red-error: #FF453A;  /* 错误/退出 */
  --green-success: #32D74B; /* 成功/激活 */
  
  /* --- 材质与层级 --- */
  --surface: #1C1C1E;    /* 标准卡片背景 (iOS Dark Gray) */
  --surface-elevated: #2C2C2E; /* 悬浮层/输入框背景 */
  --border: 1rpx solid rgba(212, 175, 55, 0.15); /* 极细微的金色边框 */
  
  /* --- 动效 --- */
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1); /* 苹果弹性曲线 */
}

.container {
  padding: 32rpx;
  box-sizing: border-box;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 底部安全距 */
}

/* 通用卡片：黑金质感 + iOS圆角 */
.luxury-card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: var(--border);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  position: relative;
  overflow: hidden;
}

/* 按钮：流金渐变 + 弹性按压 */
.btn-gold {
  background: linear-gradient(135deg, #D4AF37 0%, #B48F25 100%);
  color: #000;
  font-weight: 600;
  border-radius: 44rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(212, 175, 55, 0.25);
  transition: transform 0.4s var(--ease-spring), opacity 0.2s;
}
.btn-gold:active { transform: scale(0.94); opacity: 0.9; }

/* 进场动画 */
.animate-enter {
  animation: slideUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  opacity: 0; transform: translateY(30rpx);
}
@keyframes slideUp { to { opacity: 1; transform: translateY(0); } }
.delay-1 { animation-delay: 0.1s; }
.delay-2 { animation-delay: 0.2s; }

/* 金色文字 */
.gold-text {
  color: var(--gold);
  text-shadow: 0 0 8rpx rgba(212, 175, 55, 0.3);
}