/* ====================================
   1. 全局变量与基础设置
   ==================================== */
   page {
    /* iOS 深色模式基调 */
    background-color: #000000;
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
    font-size: 28rpx;
    line-height: 1.5;
    
    /* 变量定义 */
    --gold: #D4AF37;       
    --gold-dim: #8c7220;   
    --gold-rgb: 212, 175, 55;
    --surface: #1C1C1E;    
    --surface-light: #2C2C2E;
    --text-secondary: #8E8E93;
    --border-radius: 24rpx;
    --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1); 
  }
  
  .container {
    padding: 32rpx;
    padding-bottom: 120rpx;
    box-sizing: border-box;
    min-height: 100vh;
  }
  
  /* ====================================
     2. 暗黑主题背景系统 (Global Background System)
     ==================================== */
  
  /* 基础底色容器 (加在页面最外层) */
  .theme-bg-diablo {
    background: 
      linear-gradient(135deg, #000000 0%, #1a1a1a 25%, #0a0a0a 50%, #1a1a1a 75%, #000000 100%),
      radial-gradient(circle at 20% 20%, rgba(42, 42, 42, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(30, 30, 30, 0.4) 0%, transparent 50%);
    position: relative;
    overflow-x: hidden;
  }
  
  /* 动态粒子层 */
  .bg-particles {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: 
      radial-gradient(circle at 10% 10%, rgba(212, 175, 55, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 90% 30%, rgba(212, 175, 55, 0.06) 0%, transparent 45%),
      radial-gradient(circle at 30% 70%, rgba(212, 175, 55, 0.04) 0%, transparent 50%),
      radial-gradient(circle at 70% 90%, rgba(212, 175, 55, 0.05) 0%, transparent 55%),
      radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.02) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
    animation: bgParticle 25s ease-in-out infinite;
  }
  
  /* 网格纹理层 */
  .bg-texture {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: 
      repeating-linear-gradient(0deg, transparent, transparent 2rpx, rgba(255, 255, 255, 0.01) 2rpx, rgba(255, 255, 255, 0.01) 4rpx),
      repeating-linear-gradient(90deg, transparent, transparent 2rpx, rgba(255, 255, 255, 0.005) 2rpx, rgba(255, 255, 255, 0.005) 4rpx);
    pointer-events: none;
    z-index: 0;
    opacity: 0.3;
  }
  
  /* 粒子浮动动画 */
  @keyframes bgParticle {
    0% { opacity: 0.6; transform: scale(1) rotate(0deg); }
    25% { opacity: 0.8; transform: scale(1.02) rotate(1deg); }
    50% { opacity: 1; transform: scale(1.05) rotate(0deg); }
    75% { opacity: 0.8; transform: scale(1.02) rotate(-1deg); }
    100% { opacity: 0.6; transform: scale(1) rotate(0deg); }
  }
  
  /* ====================================
     3. 排版与装饰工具
     ==================================== */
  .gold-title {
    color: var(--gold);
    font-size: 34rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
  }
  
  .gold-text { color: var(--gold); }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 24rpx;
    padding: 0 8rpx;
  }
  
  .section-title {
    font-size: 34rpx;
    font-weight: 700;
    color: #fff;
  }
  
  .section-more {
    font-size: 24rpx;
    color: var(--text-secondary);
  }
  
  /* 装饰线条 */
  .decorative-line { position: relative; }
  .decorative-line::after {
    content: '';
    position: absolute;
    bottom: -8rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 2rpx;
    background: linear-gradient(90deg, transparent, var(--gold), transparent);
    opacity: 0.6;
  }
  
  /* 金色脉冲文字 */
  .gold-pulse {
    animation: goldPulse 3s ease-in-out infinite;
    position: relative;
  }
  
  /* ====================================
     4. 核心组件 (Components)
     ==================================== */
  
  /* --- 布局网格 --- */
  .grid-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32rpx;
    position: relative;
  }
  
  @media (max-width: 750rpx) {
    .grid-3 { gap: 24rpx; }
    .container { padding-bottom: 140rpx; }
  }
  
  /* --- 玻璃质感卡片 --- */
  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border-radius: 24rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.12);
    box-shadow: 
      0 8rpx 32rpx rgba(0, 0, 0, 0.3),
      inset 0 1rpx 0 rgba(255, 255, 255, 0.15),
      inset 0 -1rpx 0 rgba(255, 255, 255, 0.03);
    position: relative;
    overflow: hidden;
    transition: all 0.4s var(--ease-spring);
  }
  .glass-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 30%, transparent 70%, rgba(255, 255, 255, 0.05) 100%);
    z-index: -1;
  }
  .glass-card:hover {
    transform: translateY(-6rpx) scale(1.02);
    border-color: rgba(var(--gold-rgb), 0.2);
    box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.4), 0 0 0 1rpx rgba(var(--gold-rgb), 0.2);
  }
  .glass-card:active {
    transform: scale(0.96);
    background: var(--surface-light);
  }
  .glass-card::after {
    content: '';
    position: absolute;
    top: 0; left: -100%;
    width: 100%; height: 100%;
    background: linear-gradient(90deg, transparent, rgba(var(--gold-rgb), 0.15), transparent);
    transition: left 0.6s ease;
  }
  .glass-card:hover::after { left: 100%; }
  
  /* --- 玻璃胶囊 --- */
  .glass-pill {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    padding: 8rpx 24rpx 8rpx 8rpx;
    border-radius: 40rpx;
    display: inline-flex;
    align-items: center;
    border: 1rpx solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3), inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
    position: relative;
    overflow: hidden;
    transition: all 0.4s var(--ease-spring);
  }
  .glass-pill:hover {
    transform: translateY(-4rpx) scale(1.02);
    border-color: rgba(var(--gold-rgb), 0.2);
  }
  
  /* --- 状态组件 --- */
  .loading-state, .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.3s forwards;
  }
  
  /* Loading */
  .loading-spinner {
    width: 80rpx; height: 80rpx;
    border: 4rpx solid rgba(var(--gold-rgb), 0.2);
    border-top: 4rpx solid var(--gold);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 32rpx;
  }
  .loading-text { font-size: 28rpx; color: var(--text-secondary); letter-spacing: 2rpx; }
  
  /* Empty */
  .empty-state { text-align: center; }
  .empty-icon { width: 120rpx; height: 120rpx; margin-bottom: 32rpx; opacity: 0.6; }
  .empty-title { font-size: 32rpx; color: var(--text-secondary); margin-bottom: 16rpx; font-weight: 600; }
  .empty-desc { font-size: 26rpx; color: var(--text-secondary); opacity: 0.8; line-height: 1.6; }
  
  /* ====================================
     5. 通用动画库
     ==================================== */
  .animate-enter {
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
    transform: translateY(40rpx);
  }
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }
  
  .page-transition, .scroll-load {
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .page-loading { animation: fadeIn 0.5s ease-out; }
  
  .scroll-fade {
    opacity: 0;
    transform: translateY(30rpx);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .scroll-fade.visible { opacity: 1; transform: translateY(0); }
  
  @keyframes slideUp { from { opacity: 0; transform: translateY(40rpx); } to { opacity: 1; transform: translateY(0); } }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes fadeInUp { 0% { opacity: 0; transform: translateY(40rpx); } 100% { opacity: 1; transform: translateY(0); } }
  @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
  @keyframes goldPulse {
    0%, 100% { color: var(--gold); text-shadow: 0 0 15rpx rgba(var(--gold-rgb), 0.4); }
    50% { color: #ffd700; text-shadow: 0 0 25rpx rgba(255, 215, 0, 0.6); }
  }

  /* ====================================
   6. 表单与交互组件 (Forms & Inputs)
   ==================================== */

/* iOS 风格搜索栏 */
.ios-search-bar {
    display: flex;
    align-items: center;
    height: 72rpx;
    padding: 0 24rpx;
    /* 复用玻璃胶囊样式，但调整圆角 */
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 20rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }
  
  .ios-search-bar:focus-within {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(var(--gold-rgb), 0.5);
    box-shadow: 0 0 20rpx rgba(var(--gold-rgb), 0.2);
  }
  
  .ios-search-input {
    flex: 1;
    font-size: 28rpx;
    color: #fff;
    height: 100%;
    margin-left: 16rpx;
  }
  
  .ios-search-placeholder {
    color: var(--text-secondary);
  }
  
  /* 进度条组件 */
  .progress-track {
    width: 100%;
    height: 8rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4rpx;
    overflow: hidden;
    position: relative;
  }
  
  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--gold), #ffd700);
    border-radius: 4rpx;
    transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }
  
  /* 进度条扫光动画 */
  .progress-fill::after {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transform: translateX(-100%);
    animation: progressShine 2s infinite;
  }
  
  @keyframes progressShine {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }